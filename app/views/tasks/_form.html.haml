= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :area
    = f.text_field :area
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :status_id
    = f.number_field :status_id
  .field
    = f.label :grabbed_by
    = f.number_field :grabbed_by
  .field
    = f.label :story_id
    = f.number_field :story_id
  .actions
    = f.submit 'Save'
